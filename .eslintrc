{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "prettier"],
    "plugins": ["react"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "parser": "@babel/eslint-parser",
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "no-warning-comments": "off",
        "class-methods-use-this": "off",
        "no-trailing-spaces": 0,
        "no-param-reassign": 0,
        "linebreak-style": 0,
        "indent": ["error", 4],
        "no-bitwise": 0,
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": "*",
                "next": [
                    "block",
                    "block-like",
                    "cjs-export",
                    "class",
                    "const",
                    "export",
                    "import",
                    "let",
                    "var"
                ]
            },
            {
                "blankLine": "always",
                "prev": [
                    "block",
                    "block-like",
                    "class",
                    "const",
                    "export",
                    "import",
                    "let",
                    "var"
                ],
                "next": "*"
            },
            {
                "blankLine": "any",
                "prev": ["const", "let", "var", "export"],
                "next": ["const", "let", "var", "export"]
            },
            {
                "blankLine": "any",
                "prev": ["export", "import"],
                "next": ["export", "import"]
            },
            {
                "blankLine": "never",
                "prev": ["case"],
                "next": ["case", "default"]
            }
        ]
    }
}
